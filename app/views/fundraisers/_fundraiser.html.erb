<% fundraising_progress = (fundraiser.progress.to_f/fundraiser.target)*100 %>

<div class="container fundraiser">
	<h1><%= fundraiser.title %></h1>
	<% if admin? %>
		<p><%= link_to "Edit Fundraiser", edit_fundraiser_path(fundraiser) %>
			| <%= link_to "Delete", fundraiser, 
  							method: :delete, 
  							data: { confirm: "Are you sure you want to delete 
  											 #{fundraiser.title}?" } %>
		</p>
	<% end %>
	<div class="col-sm-4">
		<h3>Raised: <b><%= fundraiser.progress %></b></h3>
		<h3>Goal: <b><%= fundraiser.target %></b></h3>	
	</div>
	<div class="col-sm-8">
		<div class="col-sm-8">
			<%= fundraiser.description %>
		</div>
	</div>
	<div class="fundraising-bar">
		<div class="col-sm-10 col-sm-offset-1 center" id="fundraising-bar">
			<div style="width: <%= fundraising_progress %>%">
				<p><b><%= fundraising_progress %>%</b></p>
			</div>
		</div>
	</div>
</div>
