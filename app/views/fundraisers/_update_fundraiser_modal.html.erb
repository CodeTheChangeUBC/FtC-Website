<button type="button" class="btn btn-info" data-toggle="modal" data-target="#updateFundraiser">Update</button>
<div id="updateFundraiser" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Update Modal</h4>
      </div>
      <div class="modal-body">
        <div class="container col-sm-4 col-sm-offset-4 new-fundraiser", style="padding-top: 15px;">
          <%= form_for(fundraiser, :url => fundraiser_path(fundraiser), action: 'update') do |f| %>
            <%= f.label :fundraising_progress %>
            <%= f.text_field :progress, class: 'form-control' %>
            <%= f.label :fundraising_target %>
            <%= f.text_field :target, class: 'form-control' %>
            <%= f.submit "Update", class: "btn btn-primary" %>
        <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>