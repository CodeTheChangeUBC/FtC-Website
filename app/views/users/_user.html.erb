<!-- Partial for showing a single user. Each user on index page
is subject to this styling. -->

<li>
  <%= link_to user.name, user %>
  <% if admin? && !current_user?(user) %>
  	| <%= link_to "delete", user, 
  							method: :delete, 
  							data: { confirm: "Are you sure you want to delete #{user.name}				?" } %>
  <% end %>
</li>