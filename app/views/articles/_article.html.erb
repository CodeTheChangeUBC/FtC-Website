<!-- Partial for showing a single article. Each article on index page
is subject to this styling. -->

<li>
  <h2><%= link_to article.title, article %></h2>
  <% if admin? %>
  	| <%= link_to "delete", article, 
  							method: :delete, 
  							data: { confirm: "Are you sure you want to delete 
  											 #{article.title}?" } %>
  <% end %>
	
</li>